<!-- Global Header -->
<header class="bg-primary border-b border-primary relative overflow-hidden">
    <div class="absolute inset-0 bg-pride-gradient opacity-5"></div>
    <div class="max-w-7xl mx-auto px-6 py-3 relative z-10">
        <div class="flex items-center justify-between">
            <!-- Logo & Navigation -->
            <div class="flex items-center gap-6">
                <div class="text-xl font-bold"><%= link_to "forked.sh", routes.path(:root), class: "text-pride" %></div>

                <!-- Main Navigation -->
                <nav class="hidden md:flex items-center gap-6 text-sm">
                    <%= link_to "Dashboard", routes.path(:dashboard), class: "text-secondary hover:text-primary transition-color" %>
                    <%= link_to "Repositories", routes.path(:dashboard), class: "text-secondary hover:text-primary transition-color" %>
                    <%= link_to "Issues", routes.path(:dashboard), class: "text-secondary hover:text-primary transition-color" %>
                    <%= link_to "Pull Requests", routes.path(:dashboard), class: "text-secondary hover:text-primary transition-color" %>
                    <%#= link_to "Issues", user_issues_path, class: nav_link_class("issues") %>
                </nav>
            </div>

            <!-- Global Search -->
            <div class="flex-1 max-w-md mx-6">
                <%= app_form_for :search, url: "", method: :get, class: "w-full" do |form| %>
                    <%= form.text_field :search, placeholder: "Search repositories, issues, code...",
                        class: "w-full text-sm" %>
                <% end %>
            </div>

            <!-- User Menu -->
            <div class="flex items-center gap-3">
                <!-- Notifications Dropdown -->
                <el-dropdown class="relative">
                    <button class="p-2 text-secondary hover:text-primary rounded-lg hover:bg-secondary transition-colors relative">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 1.985-1.75c.017-.137-.097-.25-.235-.25h-3.5c-.138 0-.252.113-.235.25A2 2 0 0 0 8 16zM3 5a5 5 0 0 1 10 0v2.947c0 .05.015.098.042.139l1.703 2.555A.5.5 0 0 1 14.5 11h-13a.5.5 0 0 1-.245-.664L2.958 8.086A.25.25 0 0 0 3 7.947V5z"/>
                        </svg>
                        <div class="absolute -top-1 -right-1 w-3 h-3 bg-pink-500 rounded-full"></div>
                    </button>

                    <el-menu anchor="bottom end" class="w-96 origin-top-right rounded-lg bg-primary border border-primary shadow-lg transition [--anchor-gap:--spacing(1)] focus:outline-none data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in">
                        <!-- Header -->
                        <div class="flex items-center justify-between px-4 py-3 border-b border-secondary">
                            <h3 class="font-semibold text-primary">Notifications</h3>
                            <div class="flex items-center gap-4 text-sm">
                                <span class="text-secondary">3 unread</span>
                                <button class="text-secondary hover:text-primary">Mark all read</button>
                            </div>
                        </div>

                        <!-- Notifications List -->
                        <div class="max-h-80 overflow-y-auto">
                            <!-- Notification 1 -->
                            <div class="flex items-start gap-3 px-4 py-3 border-l-4 border-l-blue-500 hover:bg-secondary transition-colors">
                                <img src="https://mesh-gradients.laravel.cloud/?from=sarah@example.com" alt="Sarah" class="w-8 h-8 rounded-full flex-shrink-0">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm text-primary">
                                        <span class="font-medium">sarahchen</span> requested your review on
                                        <a href="#" class="text-blue-600 hover:underline">#42</a>
                                    </p>
                                    <p class="text-sm text-secondary mt-1">Add user authentication and session management</p>
                                    <p class="text-xs text-subtle mt-1">10 minutes ago</p>
                                </div>
                            </div>

                            <!-- Notification 2 -->
                            <div class="flex items-start gap-3 px-4 py-3 border-l-4 border-l-yellow-500 hover:bg-secondary transition-colors">
                                <img src="https://mesh-gradients.laravel.cloud/?from=alex@example.com" alt="Alex" class="w-8 h-8 rounded-full flex-shrink-0">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm text-primary">
                                        <span class="font-medium">alexkim</span> mentioned you in
                                        <a href="#" class="text-blue-600 hover:underline">#42</a>
                                    </p>
                                    <p class="text-sm text-secondary mt-1">Hey @johndoe, could you add a comment...</p>
                                    <p class="text-xs text-subtle mt-1">25 minutes ago</p>
                                </div>
                            </div>

                            <!-- Notification 3 -->
                            <div class="flex items-start gap-3 px-4 py-3 border-l-4 border-l-green-500 hover:bg-secondary transition-colors">
                                <img src="https://mesh-gradients.laravel.cloud/?from=john@example.com" alt="John" class="w-8 h-8 rounded-full flex-shrink-0">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm text-primary">
                                        <span class="font-medium">johndoe</span> approved your pull request
                                        <a href="#" class="text-blue-600 hover:underline">#41</a>
                                    </p>
                                    <p class="text-sm text-secondary mt-1">Fix database connection timeout issue</p>
                                    <p class="text-xs text-subtle mt-1">1 hour ago</p>
                                </div>
                            </div>

                            <!-- Notification 4 -->
                            <div class="flex items-start gap-3 px-4 py-3 hover:bg-secondary transition-colors">
                                <img src="https://mesh-gradients.laravel.cloud/?from=emma@example.com" alt="Emma" class="w-8 h-8 rounded-full flex-shrink-0">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm text-primary">
                                        <span class="font-medium">emmawilson</span> assigned you to issue
                                        <a href="#" class="text-blue-600 hover:underline">#156</a>
                                    </p>
                                    <p class="text-sm text-secondary mt-1">Update API documentation for v2.0</p>
                                    <p class="text-xs text-subtle mt-1">2 hours ago</p>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="border-t border-secondary">
                            <a href="#" class="block px-4 py-3 text-center text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors">
                                View all notifications
                            </a>
                        </div>
                    </el-menu>
                </el-dropdown>
                <!-- Create New Dropdown -->
                <el-dropdown class="relative">
                    <button class="p-2 text-secondary hover:text-primary rounded-lg hover:bg-secondary transition-colors">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                    </button>

                    <el-menu anchor="bottom end" class="w-48 origin-top-right rounded-lg bg-primary border border-primary shadow-lg transition [--anchor-gap:--spacing(1)] focus:outline-none data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in">
                        <div class="py-1">
                            <a href="#" class="flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M2 2.5A2.5 2.5 0 014.5 0h8.75a.75.75 0 01.75.75v12.5a.75.75 0 01-.75.75h-2.5a.75.75 0 110-1.5h1.75v-2h-8a1 1 0 00-.714 1.7.75.75 0 01-1.072 1.05A2.495 2.495 0 012 11.5v-9zm10.5-1V9h-8c-.356 0-.694.074-1 .208V2.5a1 1 0 011-1h8zM5 12.25v3.25a.25.25 0 00.4.2l1.45-1.087a.25.25 0 01.3 0L8.6 15.7a.25.25 0 00.4-.2v-3.25a.25.25 0 00-.25-.25h-3.5a.25.25 0 00-.25.25z"/>
                                </svg>
                                New Repository
                            </a>
                            <a href="#" class="flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M1.75 1A1.75 1.75 0 000 2.75v10.5C0 14.216.784 15 1.75 15h12.5A1.75 1.75 0 0016 13.25V2.75A1.75 1.75 0 0014.25 1H1.75zM1.5 2.75a.25.25 0 01.25-.25h12.5a.25.25 0 01.25.25V13.25a.25.25 0 01-.25.25H1.75a.25.25 0 01-.25-.25V2.75zM7.25 8a.75.75 0 01.75-.75h1a.75.75 0 010 1.5H8.5v.75a.75.75 0 01-1.5 0V8.75H6.25a.75.75 0 010-1.5H7V6.5a.75.75 0 011.5 0V7.25z"/>
                                </svg>
                                New Organization
                            </a>
                        </div>
                    </el-menu>
                </el-dropdown>
                <!-- User Dropdown -->
                <el-dropdown class="relative">
                    <button class="flex items-center p-1 rounded-lg hover:bg-secondary transition-colors">
                        <img src="<%= current_user.avatar_url %>" alt="User" class="w-7 h-7 rounded-full">
                        <svg class="w-3 h-3 ml-1 text-secondary" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4.427 7.427l3.396 3.396a.25.25 0 00.354 0l3.396-3.396A.25.25 0 0011.396 7H4.604a.25.25 0 00-.177.427z"/>
                        </svg>
                    </button>

                    <el-menu anchor="bottom end" class="w-48 origin-top-right rounded-lg bg-primary border border-primary shadow-lg transition [--anchor-gap:--spacing(1)] focus:outline-none data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-100 data-enter:ease-out data-leave:duration-75 data-leave:ease-in">
                        <div class="py-1">
                            <%= link_to routes.path(:root), class: "flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors" do %>
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Profile
                            <% end %>
                            <%= link_to routes.path(:root), class: "flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors" do %>
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                Settings
                            <% end %>
                            <%= link_to routes.path(:root), class: "flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors" do %>
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M0 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v2h2a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm2-1a1 1 0 0 0-1 1v6.5L6 4.5l1.268 1.268a.5.5 0 0 0 .7-.062L11.305 2.5A1.5 1.5 0 0 0 10.5 2H2z"/>
                                    <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-.646-4.854.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708L12.5 13.207l-.646.647a.5.5 0 0 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 .708-.708Z"/>
                                </svg>
                                SSH Keys
                            <% end %>

                            <div class="h-px bg-stone-200 dark:bg-stone-700 my-1"></div>

                            <%= app_form_for(:session, url: routes.path(:destroy_session), method: :delete) do |f| %>
                              <button type="submit" class="text-left w-full flex items-center px-3 py-2 text-sm text-secondary hover:text-primary hover:bg-secondary transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                </svg>
                                Sign Out
                              </button>
                            <% end %>
                        </div>
                    </el-menu>
                </el-dropdown>
            </div>
        </div>
    </div>
</header>
